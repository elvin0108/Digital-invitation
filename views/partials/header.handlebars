<header class="bg-dark text-white py-3">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="event-title mb-0">{{eventDetails.name}}</h1>
            </div>
            <div class="col-md-6 text-md-end">
                <p class="mb-0">
                    <i class="fas fa-calendar-alt me-2"></i>{{eventDetails.date}} | 
                    <i class="fas fa-clock me-2"></i>{{eventDetails.time}}
                </p>
            </div>
        </div>
    </div>
</header>